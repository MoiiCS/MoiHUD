<root>
	<styles>
		<include src="file://{resources}/styles/csgostyles.css" />
		<include src="file://{resources}/styles/hud/hudhealtharmor.css" />
	</styles>

                                                      
                                                      
                                                              
                                                   
                                                                                              
                                                    
                                                                
       
	<CSGOHudHealthArmor class="hud-HA" hittest="false">

		<Image class="hud-HA-bar-border_health" src="file://{images}/hud/healtharmor/habarborder.png" />
		<Panel class="hud-HA-bar-border_health_blur" />
		<Image class="hud-HA-bar-border_armor" src="file://{images}/hud/healtharmor/habarborder.png" />
		<Panel class="hud-HA-bar-border_armor_blur" />
		<ProgressBar id="HealthBar" class="hud-HA-bar--health" />
		<ProgressBar id="ArmorBar" class="hud-HA-bar--armor" />
		<Image class="hud-HA-bg-center" src="file://{images}/hud/healtharmor/healthbg.png" />                         
		<Image class="hud-HA-bg-center-border" src="file://{images}/hud/healtharmor/healthbgborder.png" />  
		<Panel id="HudHealthArmorBG" class="hud-HA-bg">
      <Panel id="HudHealthBG" class="hud-HA-bg-h"  />
      <Panel id="HudArmorBG" class="hud-HA-bg-a"  />
    </Panel>

                                            
		<Panel class="hud-HA-main left-right-flow">
      
		                 
			<Panel class="hud-HA-health">
				<Panel class="hud-HA-icon-container">
					<Image class="hud-HA-icon hud-HA-icon--health cl-hud-wash-color" src="file://{images}/hud/healtharmor/hp.png" scaling="stretch-to-fit-preserve-aspect" />
				</Panel>
				<Panel class="hud-HA-text">
					<Label class="hud-HA-health-label cl-hud-wash-color" text="{s:health}"/>
				</Panel>
			</Panel>

			              
			<Panel class="hud-HA-armor">
				<Panel class="hud-HA-icon-container">
					<Image class="hud-HA-icon hud-HA-icon--heavy cl-hud-wash-color" src="file://{images}/hud/healtharmor/armor.png" scaling="stretch-to-fit-preserve-aspect" />
					<Image class="hud-HA-icon hud-HA-icon--armor cl-hud-wash-color" src="file://{images}/hud/healtharmor/armor.png" scaling="stretch-to-fit-preserve-aspect" />
					<Image class="hud-HA-icon hud-HA-icon--helmet cl-hud-wash-color" src="file://{images}/hud/healtharmor/helmet.png" scaling="stretch-to-fit-preserve-aspect" />
				</Panel>
				<Panel class="hud-HA-text">
					<Label class="hud-HA-armor-label cl-hud-wash-color" text="{s:armor}"/>
				</Panel>

			</Panel>
			<CSGOHudPassiveItems id="HudPassiveItems"/>
		</Panel>

	</CSGOHudHealthArmor>
</root>